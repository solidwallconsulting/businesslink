{% extends 'base.html.twig' %}

{% block title %}BusinessLink | {{ article.title }}{% endblock %}

{% block body %}


<div class="page-header" style="background: url(/assets/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="product-title"> {{ article.title }}</h2>
                    <ol class="breadcrumb">
                        <li><a href="{{ path('main_route') }}">Accueil /</a></li> 
                        <li class="current">{{ article.title }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="section-padding">
    <div class="container">

        <div class="product-info row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <img src="{{article.photoURL}}" class="img-fluid" alt="">

                <div>
                    {{ article.content | raw }}
                </div>
            </div> 
        </div>

    </div>
</div>





{% endblock %}