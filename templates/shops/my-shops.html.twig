{% extends 'base.html.twig' %}

{% block title %}Shops{% endblock %}

{% block body %}
    

<div class="page-header" style="background: url(assets/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="product-title"> Shops</h2>
                    <ol class="breadcrumb">
                        <li><a href="{{ path('main_route') }}">Accueil /</a></li>


                        <li class="current">Shops</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="main-container section-padding">
    <div class="container">
        <div class="row">
             
            <div class="col-lg-12 page-content">

                <div class="product-filter">
                    <div class="short-name">
                        <a class="btn btn-outline-primary" href="{{ path('shops_new') }}">Cr√©er un shop</a>
                    </div>
                    <div class="Show-item">
                         
                    </div>
                    <ul class="nav nav-tabs">
                        
                    </ul>
                </div>


                <div class="adds-wrapper">
                    <div class="tab-content">
                        <div id="grid-view" class="tab-pane fade active show">
                            <div class="row" id="shops">

                               {% for shop in shops %}
                                   <div class="col-sm-6 mb-3">
                                    
                                    <div class="card p-0">
                                        <div class="card-body">
                                            <div class="shop-card">
                                                 <div class="d-flex">
                                                     <div class="shop-logo-listing" style="background-image: url({{shop.logoURL}});" alt=""></div>
                                                     <div class="discreption">
                                                         <h3><a href="/shops/details/{{shop.id}}">{{shop.label}}</a> </h3>
                                                         <p class="text-muted">hi</p>
                                                         <p>{{shop.products | length}} annonce(s)</p>
                                                     </div>
                                                 </div>

                                                 <div>
                                                     <p><i class="lni-map-marker"></i> {{shop.town.name}}</p>
                                                 </div>

                                                 <div class="row">
                                                    <div class="col-sm-4 p-0">
                                                        <p class="w-100 text-center  "> <a > <i class="lni lni-phone"></i> {{shop.phone}}</a> </p>
                                                    </div>
                                                    <div class="col-sm-4 p-0">
                                                       <p class="w-100 text-center  "> <a > <i class="lni lni-phone"></i> {{shop.fixPhone}}</a> </p>
                                                    </div>
                                                    <div class="col-sm-4 p-0">
                                                        <p class="w-100 text-center  "> <a > <i class="lni lni-phone"></i> {{shop.whatsAppNumber}}</a> </p>
                                                    </div>
                                                    
                                                 </div>

                                                  <div class="row mt-3">
                                                    <div class="col-sm-4  ">
                                                        <a class="btn btn-secondary" href="{{ path('shops_edit',{id:shop.id}) }}">Modifier</a>
                                                    </div> 
                                                    
                                                 </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               {% endfor %}

                            </div>
                        </div> 
                    </div>
                </div>


                <div class="pagination-bar">

                    <div class="pagination-bar">
                        <nav>
                            <ul class="pagination justify-content-center">


                              



                            </ul>
                        </nav>
                    </div>


                </div>



            </div>
        </div>
    </div>
</div>




{% endblock %}


