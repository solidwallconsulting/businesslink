 

{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Délégations</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('city_new',{id:town.id}) }}">Ajouter</a>
                        </div>

                    </div>
                    <div class="card-body w-100">




                        <table class="table datatable ">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Délégation</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for city in cities %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ city.name }}</td>
                                    <td> 
                                        <a href="{{ path('city_edit', {'id': city.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>



                    </div>


                </div>

            </div>


            {% endblock %}