

 

{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Catégories</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('category_new') }}">Ajouter</a>
                        </div>

                    </div>
                    <div class="card-body w-100">




                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Catégorie</th>
                                    <th>Icon</th>
                                    <th>Sous-Catégorie</th>
                                    
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ category.name }}</td>
                                    <td>
                                        <img src="{{ category.icon }}" width="50px" alt="">
                                    </td>
                                    <td>
                                        <a href="{{ path('category_subs_subs',{id:category.id}) }}"><span class="bg-info badge">{{ category.subCategories | length }} élement(s)</span></a>
                                    </td>
                                    
                                    <td>
                                        <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        



                    </div>


                </div>

            </div>


            {% endblock %}